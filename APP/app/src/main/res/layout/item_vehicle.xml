<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Vehicle Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp">

            <ImageView
                android:id="@+id/ivVehicleImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#F5F5F5" />

        </androidx.cardview.widget.CardView>

        <!-- Vehicle Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <!-- Vehicle Name -->
            <TextView
                android:id="@+id/tvVehicleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VinFast VF8"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Brand & Model -->
            <TextView
                android:id="@+id/tvBrandModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VinFast • VF8"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Price -->
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.200.000.000 VNĐ"
                android:textColor="#333333"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <!-- Status & Stock -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Có sẵn"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:background="@drawable/bg_status_available"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp" />

                <TextView
                    android:id="@+id/tvStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 xe"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <!-- View Details Button -->
            <Button
                android:id="@+id/btnViewDetails"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:text="Chi tiết"
                android:textColor="#333333"
                android:textSize="12sp"
                android:background="@drawable/bg_button_outline"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

            <!-- Book Vehicle Button -->
            <Button
                android:id="@+id/btnBookVehicle"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:text="Đặt xe"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:background="@drawable/bg_button_primary"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginTop="6dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>